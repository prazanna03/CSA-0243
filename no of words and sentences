#include<stdio.h>
#include<conio.h>
int main()
{
 char wor[100];
 int i;
 int word = 0;
 int count = 0;
 int sent = 0;

 clrscr();

 printf("Enter a word or sentence : ");
 scanf("%[^\n]s",&wor);

 for (i = 0;i<100;i++)
 {
  if (wor[i] == ' ')
  {
   word = word + 1;
  }
  else if (wor[i] == '.')
  {
   sent = sent + 1;
  }
 }

 printf("No of words in a given text is : %d",word);
 printf("\n");
 printf("No of sentence in a given text is : %d",sent);

}
